


<geoFont>
    
<!-- fonts have two parts: shapes and characters
    shapes can be the grid within which letters are drawn,
        forms that occur in many letters, 
        or recipes for aiding form placement
 
    characters specify a character code (an integer), and 
        then describe how to draw it. 
    All characters recieve standard inputs: 
        a geoMark that is the line upon which the letter will be drawn
        a point on the geoMark that is the starting point of the letter
        a circle whose radius specifies the distance from base to top
        circles describing other font metrics
        a line that gives the vertical direction
        a line that gives the horizontal direction
        
    All characters must specify a final point, which is the point
    on the mark at which the next letter will start. 
 
    -->
<shape name="letterGrid">
    <input name="p1" type="point" />  <!-- anchors for -->
    <input name="p2" type="point" />
    <input name="p3" type="point" />
    <elements>
        <element name="3" type="line" p1="1" p2="2" />
        <element name="4" type="first" p1="1" p2="2" />
        <element name="5" type="line" p1="1" p2="2" />
        <element name="6" type="line" p1="1" p2="2" />
        </elements>
    <nextPosition which="4" /> <!-- kerning happens here -->
    </shape>

<shape name="ed"> <!-- a resource for reuse -->
    <input name="p1" type="point" />  <!-- anchors for -->
    <input name="p2" type="point" />
    <input name="p3" type="point" />
    <elements>
        <element name="3" type="line" p1="1" p2="2" />
        <element name="4" type="first" p1="1" p2="2" />
        <element name="5" type="line" p1="1" p2="2" />
        <element name="6" type="line" p1="1" p2="2" />
    </elements>
    </shape>
    
<character val="65">
    <input name="p1" type="point" />  <!-- anchors for -->
    <input name="p2" type="point" />
    <input name="p3" type="point" />
    <elements>
        <element name="3" type="line" p1="1" p2="2" />
        <element name="4" type="first" p1="1" p2="2" />
        <element name="5" type="line" p1="1" p2="2" />
        <element name="6" type="line" p1="1" p2="2" />
        <element name="7" type="ed" p1="1" p2="2" p3="3" />
        </elements>
    <nextPosition which="4"> <!-- overrides lettergrid's -->
    </character>


    
</geoFont>

